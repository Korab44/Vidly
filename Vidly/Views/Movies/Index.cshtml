@model List<Movie>


@{
    ViewData["Title"] = "Movie";
}

<h2>Movies</h2>
<a class="btn btn-primary mb-3" asp-action="New">New Movie</a>
@if (!Model.Any())
{
    <p>We don't have any movie yet.</p>
   
}
else
{
    <table class="table table-brodered table-dark table-hover">
        <thead>
            <tr>
                <th><b>Movie</b></th>
                <th><b>Genre</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
            <td><a class="text-light" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
            <td>@movie.MovieGenre</td>
            </tr>
            }

        </tbody>
    </table>
}
