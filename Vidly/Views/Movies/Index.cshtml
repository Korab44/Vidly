@model List<Movie>


@{
    ViewData["Title"] = "Movie";
}

<h2>Movies</h2>
<a class="btn btn-primary mb-3" asp-action="New">New Movie</a>

    <table id="movies" class="table table-brodered table-dark table-hover">
        <thead>
            <tr>
                <th style="color: beige"><b>Movie</b></th>
                <th style="color: beige"><b>Genre</b></th>
                <th style="color: beige"><b>Delete</b></th>
            </tr>
        </thead>
        <tbody>
      
        </tbody>
    </table>

@section scripts
    {
    <script>
        $(document).ready(function () {
                var table = $("#movies").DataTable({
                    ajax: {
                    url: "/api/moviesapi/GetMovies",
                        dataSrc: ""
                    },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/moviesapi/edit/" + movie.id + "' class='text-light'>" + data + "</a>";
                        }
                    },
                    {
                        data: "movieGenre",
                        render: function (data) {
                            var genre = "";
                            switch (data) {
                                case 0:
                                    genre = "Action";
                                    break;
                                case 1:
                                    genre = "Comedy";
                                    break;
                                case 2:
                                    genre = "Thriller";
                                    break;
                                case 3:
                                    genre = "Drama";
                                    break;
                                case 4:
                                    genre = "Documentary";
                                    break;
                                case 5:
                                    genre = "Horror";
                                    break;
                                case 6:
                                    genre = "Cartoon";
                                    break;
                            }
                            return genre;
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<a class='btn btn-link js-deleteMovie text-light p-1' data-movie-id=" + data + ">Delete</a>";
                        }
                    }
                ]

                });

            $("#movies").on("click", ".js-deleteMovie", function () {
                var button = $(this);
                bootbox.confirm({
                    title: "Delete Movie",
                    message: "Are you sure you want to delete this Movie?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-outline-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-light'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/moviesapi/" + button.attr("data-movie-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });
            });
        });
        

    </script>
}